{{ 'recently-view-product.js' | asset_url | script_tag }}
<style>
  .hover-btn.recently-view {
    display: none;
  }
</style>
<section class="brushed-cotton-section you-may-also-like-section recently-viewed-products" data-name="recently-view-product" 
  data-product_handle="{{ product.handle }}"
  data-num_of_product="{{ section.settings.products_per_page | default: 5 }}"
  >
  <div class="container">
    {% if section.settings.heading != blank %}
      <div class="section-title text-center">
        <h2>{{ section.settings.heading }}</h2>
      </div>
    {% endif %}  
    <div class="js-recently-view-pdp brushed-cotton-sliderd hover-show"></div>    
  </div>
</section>

{% schema %}
  {
    "name": "Recently view product",
    "enabled_on": {
      "templates": ["product"]    
    },
    "settings": [      
      {
        "type":"text",
        "id":"heading",
        "label":"Heading",
        "default":"You may also like"
      }    
    ],
    "presets":[
      {
        "name":"Recently view product"
      }
    ]
  }
{% endschema %}