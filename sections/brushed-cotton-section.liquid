<section class="brushed-cotton-section" data-name="brushed-cotton-section">
    <div class="container">
      {% if section.settings.title != blank %}
        <div class="section-title text-center">
            <h2>{{ section.settings.title }}</h2>
        </div>
       {% endif %}
       
       <div class="brushed-cotton-slider hover-show">                      
        {% for card_item in section.settings.collection.products %}
          {% render "card-product",card_product:card_item %}
        {% endfor %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="flex justify-center view-all-btn">
          <a href="{{ section.settings.button_url }}" class="link-btn">
            {{ section.settings.button_label }}
            {% render "icons",icon:"right_black_arrow" %}            
          </a>
        </div>
      {% endif %}
    </div>
</section>
{% schema %}
  {
    "name": "Brushed cotton section",
    "settings": [
      {
        "type":"text",
        "id":"title",
        "label":"Title"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Select collection"
      },
      {
        "type":"text",
        "id":"button_label",
        "label":"Button label"
      },
      {
        "type":"url",
        "id":"button_url",
        "label":"Button URL"
      }
    ],
    "presets":[
      {
        "name":"Brushed cotton section"
      }
    ]
  }
{% endschema %}

