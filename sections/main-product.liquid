  {
    "name": "Main product",
    "settings": [],
    "blocks":[
      {
        "type": "@app"
      },
      {
        "type":"title",
        "name":"Product title",
        "limit":1
      },
      {
        "type":"price",
        "name":"Price",
        "limit":1
      },
      {
        "type":"variant_picker",
        "name":"Variant picker",
        "limit":1
      },
      {
        "type": "description",
        "name": "Description",
