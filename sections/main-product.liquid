      {
        "type":"product_accordian",
        "name":"Product accordian",
        "limit":6,
        "settings":[
          {
            "type":"text",
            "id":"heading",
            "label":"Heading"
          },
          {
            "type":"richtext",
            "id":"content",
            "label":"Content"
          },
          {
            "type":"checkbox",
            "id":"show_description",
            "label":"Show content as product description?",
